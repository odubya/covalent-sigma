{
    "compilerOptions": {
      "target": "es2015",
      "module": "esnext",
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2017", "dom"],
      "types": [],
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "inlineSources": true,
      "outDir": "./dist/out-tsc",
      "rootDir": "./src",
      "strict": true,
      "allowJs": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitOverride": true,
      "plugins": [
        {
          "name": "ts-lit-plugin",
          "strict": true
        }
      ]
    },
    "include": [
      "src/**/*.ts",
      "node_modules/lit-scss-loader/types.d.ts"
    ],
    "exclude": []
  }